<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_title"
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="New label"
        android:textColor="@color/_4d4d4d"
        android:textSize="22.22sp" />

    <EditText
        android:id="@+id/add_label_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:hint="Type label here e.g. Shopping"
        android:lines="1"
        android:maxLength="10"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHighlight="#bababa"
        android:textSize="17.78sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Select label color:"
        android:textColor="#bababa"
        android:textSize="17.76sp" />

    <GridView
        android:id="@+id/add_label_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:listSelector="@drawable/label_background_dotted"
        android:numColumns="5"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dp" >
    </GridView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="OK"
            android:textColor="@color/active"
            android:textSize="15.56sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/save"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CANCEL"
            android:textSize="15.56sp" />
    </RelativeLayout>

</LinearLayout>