<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_item_background">

    <CheckBox
        android:id="@+id/completed_task"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:button="@drawable/task_chechk_box" />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_time"
        android:layout_toRightOf="@+id/completed_task"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingRight="10dp"
            android:textColor="#808080"
            android:textSize="8.89sp" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:textSize="17.78sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_layout"
        android:layout_below="@+id/title_layout"
        android:textColor="#808080"
        android:paddingBottom="5dp"
        android:textSize="13.33sp" />

    <TextView
        android:id="@+id/list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="#808080"
        android:textSize="13.33sp" />

    <TextView
        android:id="@+id/list_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_time"
        android:layout_marginRight="5dp"
        android:textColor="#808080"
        android:textSize="13.33sp" />

    <TextView
        android:id="@+id/list_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_time1"
        android:layout_marginRight="5dp"
        android:textColor="#808080"
        android:textSize="13.33sp" />

    <TextView
        android:id="@+id/list_time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_time2"
        android:layout_marginRight="5dp"
        android:textColor="#808080"
        android:textSize="13.33sp" />

    <TextView
        android:id="@+id/list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:textColor="#ff0000"
        android:textSize="16dp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drop_shadow"/>

</RelativeLayout>