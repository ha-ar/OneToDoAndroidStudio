<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/before_repeat_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_fields_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/before_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/reminder_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/reminder" />

        <LinearLayout
            android:id="@+id/before1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Reminder"
                android:textColor="@color/_4d4d4d"
                android:textColorHint="@color/_999999"
                android:textSize="17.78sp" />

            <TextView
                android:id="@+id/before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/_777777"
                android:textColorHint="@color/_999999"
                android:textSize="13.33sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/before_grid_view_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/add_task_before_tabs_task"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            app:pstsActivateTextColor="@color/_4d4d4d"
            app:pstsDeactivateTextColor="#CCCCCC"
            app:pstsTabSwitch="true" >
        </com.astuetz.PagerSlidingTabStrip>

        <android.support.v4.view.ViewPager
            android:id="@+id/add_task_before_pager"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/add_task_before_tabs_task" />
    </LinearLayout>

</LinearLayout>