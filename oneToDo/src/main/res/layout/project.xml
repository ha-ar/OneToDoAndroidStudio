<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/deep_sky_blue"
    android:foreground="@drawable/dim_background" >

    <RelativeLayout
        android:id="@+id/header_project"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

      
        <TextView
            android:id="@+id/page_title_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:text="Project" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_below="@id/page_title_project"
            android:layout_gravity="bottom|center_horizontal" />


        <android.support.v4.view.ViewPager
            android:id="@+id/add_project_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/indicator_project" />

        <ImageView
            android:id="@+id/imageView1_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/indicator_project"
            android:layout_alignParentLeft="true"
            
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imageView2_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/accept" />

    </RelativeLayout>

</FrameLayout>