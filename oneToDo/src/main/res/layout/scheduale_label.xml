<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/before_repeat_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_fields_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sch_label_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sch_label_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/label_grey" />

        <TextView
            android:id="@+id/sch_label_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:hint="Label"
            android:textColor="@color/_4d4d4d"
            android:textColorHint="@color/_999999"
            android:textSize="17.78sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/sch_label_grid"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="5dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:visibility="gone" />

</LinearLayout>