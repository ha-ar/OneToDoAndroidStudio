<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_task_layout1"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_below="@+id/title_task_layout"
    android:animateLayoutChanges="true"
    android:background="@drawable/input_fields_gray"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ImageButton
        android:id="@+id/assign_task_button_task"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:src="@drawable/assign_blue" />

    <TextView
        android:id="@+id/task_assign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/assign_task_button_task"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="Assign"
        android:paddingLeft="18dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColorHint="@color/_999999"
        android:textSize="17.78sp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/task_assign"
        android:layout_centerVertical="true"
        android:src="@drawable/next_arrow" />

</RelativeLayout>