<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_grey_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/date_time_project_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/calendar_grey" />

        <TextView
            android:id="@+id/date_time_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_fields_gray"
            android:gravity="center_vertical"
            android:text="Due 06:00pm"
            android:textColor="@color/grey"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:id="@+id/date_time_include_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/date_time_layout"
        android:paddingLeft="10dp"
        android:visibility="gone" />

</LinearLayout>