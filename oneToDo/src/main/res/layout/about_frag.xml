<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:focusable="false">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/active"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:theme="@style/ThemeToolbarLightOverflow" />

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="225dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:weightSum="1"

        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:baselineAligned="false"
        android:focusable="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

    <Button

        android:text="Facebook"
        android:id="@+id/buttonFB"
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1"

        android:background="@drawable/button_fbshape"
        android:textColor="#ffffffff"

        />


    <Button

        android:text="Twitter"
        android:id="@+id/buttonTwitter"
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1"


        android:layout_marginTop="20dp"
        android:background="@drawable/button_twittershape"
        android:textColor="#ffffffff" />

    <Button
        android:text="Email"
        android:id="@+id/buttonEmail"
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1"

        android:layout_marginTop="20dp"
        android:background="@drawable/button_emailshape"
        android:textColor="#ffffffff" />



    <Button

        android:text="Help &#38; Support"
        android:id="@+id/buttonSupport"
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1"

        android:layout_marginTop="20dp"
        android:background="@drawable/button_supportshape"
        android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/copyrightContent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oneTODO V 1.0"
            android:id="@+id/textVersion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Onesout AG 2014-2015"
            android:id="@+id/textCopy" />
    </LinearLayout>

</LinearLayout>