<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/add_task_edit_title"
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:background="@drawable/border_bottom_blue"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="Label: Shopping"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22.22sp" />

    <TextView
        android:id="@+id/add_task_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_white"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="Edit"
        android:textColor="#000000"
        android:textSize="17.78sp" />

    <TextView
        android:id="@+id/add_task_delete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="Delete"
        android:textColor="#000000"
        android:textSize="17.78sp" />

</LinearLayout>