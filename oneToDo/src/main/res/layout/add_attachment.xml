<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/add_attachment_title"
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:background="@drawable/border_bottom_blue"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="Add Attachment"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22.22sp" />

    <TextView
        android:id="@+id/camera1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_white"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="From Camera"
        android:textColor="#000000"
        android:textSize="17.78sp" />

    <TextView
        android:id="@+id/gallery1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_white"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="From Gallery"
        android:textColor="#000000"
        android:textSize="17.78sp" />

    <TextView
        android:id="@+id/add_attachment_dropbox"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_white"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="From Dropbox"
        android:textColor="#000000"
        android:textSize="17.78sp" />

    <TextView
        android:id="@+id/add_attachment_google"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_white"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="From Google Drive"
        android:textColor="#000000"
        android:textSize="17.78sp" />

</LinearLayout>